@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Berber Shop'a Hoş Geldiniz!</h1>
    <p class="text-center text-muted mb-5">
        Hemen aşağıdaki seçeneklerden birini seçerek hizmetlerimizden yararlanabilirsiniz.
    </p>
    <div class="row text-center">
        <!-- Hizmetler -->
        <div class="col-md-4 mb-4">
            <a href="/Hizmetler" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Hizmetler</h5>
                        <p class="card-text text-muted">Hizmetlerimizi inceleyin ve randevu alın.</p>
                        <i class="bi bi-scissors fs-1 text-primary"></i>
                    </div>
                </div>
            </a>
        </div>
        <!-- Giriş Yap -->
        <div class="col-md-4 mb-4">
            <a href="/Login" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Giriş Yap</h5>
                        <p class="card-text text-muted">Hesabınıza giriş yapın veya kayıt olun.</p>
                        <i class="bi bi-person-circle fs-1 text-primary"></i>
                    </div>
                </div>
            </a>
        </div>
        <!-- Saç Modelleri -->
        <div class="col-md-4 mb-4">
            <a href="/HairModels" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Saç Modelleri</h5>
                        <p class="card-text text-muted">En iyi saç modelini keşfedin.</p>
                        <i class="bi bi-images fs-1 text-primary"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
