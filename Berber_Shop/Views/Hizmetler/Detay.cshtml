@model List<string>

@{
    ViewData["Title"] = "Hizmet Detayları";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">@ViewBag.Hizmet - Çalışanlar</h1>
    <div class="row">
        @foreach (var calisan in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center">
                        <h5 class="card-title">@calisan</h5>
                        <form method="post" action="/Hizmetler/RandevuAl" class="mt-3">
                            <input type="hidden" name="calisan" value="@calisan" />
                            <input type="hidden" name="hizmet" value="@ViewBag.Hizmet" />
                            <label for="tarih-@calisan" class="form-label">Tarih ve Saat:</label>
                            <input type="datetime-local" id="tarih-@calisan" name="tarih" class="form-control mb-3" required />
                            <button type="submit" class="btn btn-success btn-block">Randevu Al</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (ViewBag.Mesaj != null)
    {
        <div class="alert alert-info mt-4 text-center">
            @ViewBag.Mesaj
        </div>
    }
</div>
